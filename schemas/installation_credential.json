{
  "$id": "ELJm6sOw-eZmeTGgLrO0p614JPcJLX5RhWIw9WzvoaDV",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Installation Credential",
  "description": "ACDC schema for TEL-anchored installation verification",
  "type": "object",
  "credentialType": "InstallationCredential",
  "version": "1.0.0",
  "properties": {
    "v": {
      "type": "string",
      "description": "Version string"
    },
    "d": {
      "type": "string",
      "description": "SAID of this credential"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID"
    },
    "a": {
      "type": "object",
      "description": "Installation attributes",
      "properties": {
        "d": {
          "type": "string",
          "description": "SAID of attributes block"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Issuance datetime"
        },
        "stackSaid": {
          "type": "string",
          "description": "SAID of the governed stack"
        },
        "lockSaid": {
          "type": "string",
          "description": "SAID of the lock file"
        },
        "pythonVersion": {
          "type": "string",
          "description": "Python version"
        },
        "platform": {
          "type": "string",
          "description": "Platform identifier"
        },
        "venvPath": {
          "type": "string",
          "description": "Virtual environment path"
        },
        "packageCount": {
          "type": "integer",
          "description": "Number of packages installed"
        }
      },
      "required": [
        "d",
        "dt",
        "stackSaid",
        "lockSaid",
        "pythonVersion"
      ]
    }
  },
  "required": [
    "v",
    "d",
    "i",
    "ri",
    "s",
    "a"
  ]
}
