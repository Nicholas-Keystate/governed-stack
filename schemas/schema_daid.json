{
  "$id": "EESMictO5lMLyvturfKFRUMyHobxcKx0Ailw7_2FpmIU",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema DAID Credential",
  "description": "ACDC schema for governed ACDC schemas (meta-schema for schema governance)",
  "type": "object",
  "credentialType": "SchemaDAIDCredential",
  "version": "1.0.0",
  "properties": {
    "v": {
      "type": "string",
      "description": "Version string"
    },
    "d": {
      "type": "string",
      "description": "SAID of this credential (DAID identifier)"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID (schema governance body)"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID (self-reference)",
      "const": "EAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
    },
    "a": {
      "type": "object",
      "description": "Schema attributes",
      "properties": {
        "d": {
          "type": "string",
          "description": "SAID of attributes block"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Issuance datetime"
        },
        "name": {
          "type": "string",
          "description": "Schema canonical name (e.g., 'skill-execution', 'conversation-turn')"
        },
        "namespace": {
          "type": "string",
          "description": "Schema namespace (e.g., 'ai-orchestrator', 'keri-sec', 'gleif')"
        },
        "contentSaid": {
          "type": "string",
          "description": "SAID of actual schema JSON content at this version"
        },
        "version": {
          "type": "string",
          "description": "Schema semver version"
        },
        "credentialType": {
          "type": "string",
          "description": "Credential type this schema defines"
        },
        "changeType": {
          "type": "string",
          "enum": [
            "major",
            "minor",
            "patch"
          ],
          "description": "Type of change from previous version"
        },
        "breakingChanges": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of breaking changes (for major versions)"
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "deprecated",
            "superseded"
          ],
          "description": "Current schema status"
        },
        "deprecationNotice": {
          "type": "object",
          "description": "Deprecation details if deprecated",
          "properties": {
            "reason": {
              "type": "string"
            },
            "successor": {
              "type": "string",
              "description": "DAID of replacement schema"
            },
            "deadline": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "required": [
        "d",
        "dt",
        "name",
        "namespace",
        "contentSaid",
        "version",
        "status"
      ]
    },
    "e": {
      "type": "object",
      "description": "Edges to related schemas",
      "properties": {
        "previousVersion": {
          "type": "object",
          "description": "Edge to previous version (rotation chain)",
          "properties": {
            "d": {
              "type": "string"
            },
            "s": {
              "type": "string",
              "const": "EAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            }
          }
        },
        "successor": {
          "type": "object",
          "description": "Edge to successor schema (if deprecated)",
          "properties": {
            "d": {
              "type": "string"
            },
            "s": {
              "type": "string",
              "const": "EAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            }
          }
        },
        "extends": {
          "type": "object",
          "description": "Edge to schema this extends (inheritance)",
          "properties": {
            "d": {
              "type": "string"
            },
            "s": {
              "type": "string",
              "const": "EAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            }
          }
        }
      }
    }
  },
  "required": [
    "v",
    "d",
    "i",
    "ri",
    "s",
    "a"
  ]
}
