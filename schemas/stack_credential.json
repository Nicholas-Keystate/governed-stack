{
  "$id": "EHofe890uUQJWD6UhU5XDzHrVHMPuqKtDW9McCp4pSsl",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "keri-sec Credential",
  "description": "ACDC schema for TEL-anchored dependency governance",
  "type": "object",
  "credentialType": "GovernedStackCredential",
  "version": "1.0.0",
  "properties": {
    "v": {
      "type": "string",
      "description": "Version string"
    },
    "d": {
      "type": "string",
      "description": "SAID of this credential"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID (workspace controller)"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID",
      "const": "EAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
    },
    "a": {
      "type": "object",
      "description": "Stack attributes",
      "properties": {
        "d": {
          "type": "string",
          "description": "SAID of attributes block"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Issuance datetime"
        },
        "name": {
          "type": "string",
          "description": "Stack name (e.g., 'ai-orchestrator-production')"
        },
        "stackSaid": {
          "type": "string",
          "description": "Computed SAID of constraint set"
        },
        "constraints": {
          "type": "object",
          "description": "Map of package name to version spec",
          "additionalProperties": {
            "type": "string"
          }
        },
        "constraintCount": {
          "type": "integer",
          "description": "Number of constraints"
        },
        "rationale": {
          "type": "string",
          "description": "Why these constraints"
        }
      },
      "required": [
        "d",
        "dt",
        "name",
        "stackSaid",
        "constraints",
        "constraintCount"
      ]
    },
    "e": {
      "type": "object",
      "description": "Edges to related stacks",
      "properties": {
        "workspace": {
          "type": "object",
          "description": "Edge to workspace credential",
          "properties": {
            "d": {
              "type": "string"
            },
            "s": {
              "type": "string",
              "const": "EDqrtt3vaINXFk7SbM-E_gEKBU4-NegmgU0hdowSg_jN"
            }
          }
        },
        "previousVersion": {
          "type": "object",
          "description": "Edge to previous version of this stack",
          "properties": {
            "d": {
              "type": "string"
            },
            "s": {
              "type": "string",
              "const": "EAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            }
          }
        }
      }
    }
  },
  "required": [
    "v",
    "d",
    "i",
    "ri",
    "s",
    "a"
  ]
}
